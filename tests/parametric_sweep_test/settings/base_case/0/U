FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


Uinlet          (Uin_var 0 0);

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (Uin_var 0 0);

boundaryField
{
    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform $Uinlet;
    }
    inlet
    {
        type            fixedValue;
        value           uniform $Uinlet;
    }
    ".*"
    {
        type            noSlip;
    }
}


